{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": "./src"
  },
  "include": ["src/*.ts"],
  "exclude": ["src/*.spec.ts"]
}
