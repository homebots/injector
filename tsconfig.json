{
  "compilerOptions": {
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": "./src"
  },
  "include": ["src/*.ts"],
  "exclude": ["src/*.spec.ts"]
}
